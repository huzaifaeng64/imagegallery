<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h1>Sign in</h1>
    <%= devise_error_messages! %>
    <div class="form-group">
    <%- if devise_mapping.registerable? %>
        <P><%= link_to 'Sign up', new_registration_path(resource_name)%></P>
      <% end -%>
      <br>
      <p><%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %></p>
    </div>
    <div class="form-group">
    <% if false %>
      <%- if devise_mapping.recoverable? %>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
    <% end -%>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Remember me
          </label>
        </div>
      <% end -%><br>
      <%= f.submit 'Sign in', :class => 'button' %>
  <% end %>
</div>
