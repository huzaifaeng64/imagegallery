

<h1 class="text-center"> All Attachments </h1>
<hr>
<div class= "container">
	<div class="row">
		<% @users.each do |user| %>
			<% if user.attachments.any? %>
				<div class="col-md-3 text-center">
					<strong> User Name: </strong> 
					<%= user.username %>
					<%= image_tag(user.attachments.first.image.thumb.url) %>
					<div class="centered">
						<%= link_to " Show Gallery" , gallery_path(user.attachments.ids), class: "btn-image" %>
					</div>
				</div>
			<% end %>		
		<% end %>
	</div>
</div>


